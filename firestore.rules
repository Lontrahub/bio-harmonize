rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can read and update their own profile.
      // Admins can read, update, and list all user profiles.
      allow read, update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Any authenticated user can create their own user document upon sign-up.
      allow create: if request.auth.uid != null;
    }

    // Public content that any authenticated user can read.
    match /cleanseContent/{document=**} {
      allow read: if request.auth.uid != null;
    }

    // User progress can be created, read, and deleted only by the user who owns it.
    match /userProgress/{progressId} {
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
