rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read any user's profile.
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Users can create, read, and update their own profile document.
      // This is necessary for features like the personal shopping list.
      allow create, read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'userProgress' collection
    match /userProgress/{progressId} {
      // Admins can read any user's progress data for the admin dashboard.
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Users can read, create, and delete their own progress documents.
      // This is necessary for the daily task checklist.
      allow read, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for the 'cleanseContent' collection
    match /cleanseContent/{document=**} {
      // Allow any authenticated user to read all documents in the cleanseContent collection.
      // This includes the shopping list, recipes, resources, etc.
      allow read: if request.auth != null;
    }
  }
}
