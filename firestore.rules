
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Helper Functions =====
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function isAdmin() {
      // This requires that the user making the request has read access to their own user document
      // to verify their 'admin' role.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ===== Collection: users =====
    match /users/{userId} {
      // Users can create, read, and update their own profile.
      // Admins can read/update any profile.
      allow read, update, create: if isOwner(userId) || isAdmin();
      
      // Only admins can list all users.
      allow list: if isAdmin();
    }

    // ===== Collection: cleanseContent =====
    match /cleanseContent/{docId} {
      // Any authenticated user can read the public cleanse content.
      allow read: if request.auth != null;
    }
    
    // ===== Collection: userProgress =====
    match /userProgress/{progressId} {
      // Users can create their own progress documents.
      allow create: if isOwner(request.resource.data.userId);
      
      // Users can read/delete their own progress. Admins can also read any progress document.
      allow read, delete: if isOwner(resource.data.userId) || isAdmin();
      
      // Only admins can list progress (for querying across users).
      allow list: if isAdmin();
    }
  }
}
